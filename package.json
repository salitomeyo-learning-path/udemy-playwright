{
  "name": "udemy-playwright",
  "version": "1.0.0",
  "description": "Automated software testing with playwright",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test --browser=all",
    "test:open": "npx playwright test --headed --browser=all",
    "firefox": "npx playwright test --config=playwright.config.ts --project=Firefox",
    "firefox:open": "npx playwright test --headed --config=playwright.config.ts --project=Firefox",
    "chromium": "npx playwright test --config=playwright.config.ts --project=Chromium",
    "chromium:open": "npx playwright test --headed --config=playwright.config.ts --project=Firefox",
    "webkit": "npx playwright test --config=playwright.config.ts --project=Webkit",
    "tag:myTag": "npx playwright test --grep @myTag",
    "tag:-myTag": "npx playwright test --grep-invert @myTag",
    "webkit:html": "npx playwright test --config=playwright.config.ts --project=Webkit --reporter=html",
    "html:report": "npx playwright show-report",
    "test:e2e": "playwright test --config=e2e.config.ts --project=Chromium"
  },
  "author": "Salome Aristizabal Giraldo (www.github.com/salitomeyo)",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.24.2",
    "prettier": "^2.7.1"
  }
}
